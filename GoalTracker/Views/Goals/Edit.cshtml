
@model EditGoalViewModel

@{
    ViewData["Title"] = "EditGoal";
}

<div class="row">

    <h1>Edit Goal</h1>
    @Html.ValidationSummary(false, "", new { @class = "text-danger" })

    <form method="post">
        <input type="hidden" asp-for="Strikes" />
        
        <h3>Goal title</h3>
        <input asp-for="Title" class="form-control" readonly />

        <h3>Extra information</h3>
        <textarea asp-for="Info" class="form-control"></textarea>

        <table>
            <tr>
                <td><h3>Started on</h3></td>
                <td><h3>Deadline</h3></td>
            </tr>
            <tr>
                <td><input asp-for="StartDT" class="form-control" /></td>
                <td><input asp-for="EndDT" class="form-control" readonly /></td>
            </tr>
        </table>

        <h3>Progress</h3>
        <div class="col-xs-2">
            <input type="number" min="0" max="100" asp-for="Progress" class="form-control">
        </div>

        <h3>Status</h3>
        @Html.DropDownListFor(model => model.Status, Html.GetEnumSelectList(typeof(GoalStatus)))
        <br /><br />
        <button type="submit" class="btn btn-default">Save</button>
        <a class="btn btn-default" asp-controller="Goals" asp-action="Index">Cancel</a>
    </form>
</div>

