@model CreateGoalViewModel

@{
    ViewData["Title"] = "Create new Goal";
}

<div class="row">

    <h1>Create new goal</h1>
    @Html.ValidationSummary(false, "", new { @class = "text-danger" })

    <form method="post">
        <h3>Goal title</h3>
        <input asp-for="Title" class="form-control" />

        <h3>Extra information</h3>
        <textarea asp-for="Info" class="form-control"></textarea>

        <table>
            <tr>
                <td><h3>Started on</h3></td>
                <td><h3>Deadline</h3></td>
            </tr>
            <tr>
                <td><input asp-for="StartDT" value="" class="form-control" /></td>
                <td><input asp-for="EndDT" class="form-control" /></td>
            </tr>
        </table>

        <button type="submit" class="btn btn-default">Save</button>
        <a class="btn btn-default" asp-controller="Goals" asp-action="Index">Cancel</a>
    </form>
</div>