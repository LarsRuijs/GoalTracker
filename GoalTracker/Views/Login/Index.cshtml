@using Models
@model LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}
<link rel="stylesheet" type="text/css" href="~/css/login.css">
<div class="row">
    <div id="loginContainer" class="col-md-4 col-md-offset-4">
        <h1>GoalTracker</h1>
        <h2>Login</h2>
        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
        <form method="post">
            <div class="form-group">
                <input asp-for="@Model.Username" type="text" placeholder="Username..." class="form-control" id="username">
            </div>
            <div class="form-group">
                <input asp-for="@Model.Password" type="password" placeholder="Password..." class="form-control" id="password">
            </div>
            <button type="submit" class="btn btn-default btn-lg">Login</button> 
            <a class="btn btn-default btn-lg" asp-controller="Login" asp-action="Register">Register</a>
        </form>
    </div>
</div>
