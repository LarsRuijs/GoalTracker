@using Models
@model UserRegisterViewModel

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}
<link rel="stylesheet" type="text/css" href="~/css/login.css">
<div class="row">
    <div id="registerContainer" class="col-md-4 col-md-offset-4">
        <h2>Register</h2>
        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
        <form method="post">
            <div class="form-group">
                <input asp-for="@Model.Email" type="text" placeholder="Email..." class="form-control" id="email">
            </div>
            <div class="form-group">
                <input asp-for="@Model.Username" type="text" placeholder="Username..." class="form-control" id="username">
            </div>
            <div class="form-group">
                <input asp-for="@Model.Password" type="password" placeholder="Password..." class="form-control" id="password">
            </div>
            <div class="form-group">
                <input asp-for="@Model.RepeatPassword" type="password" placeholder="Repeat password..." class="form-control" id="repeatPassword">
            </div>
            <button type="submit" class="btn btn-default">Register</button>
            <a class="btn btn-default" asp-controller="Login" asp-action="Index">Cancel</a>
        </form>
    </div>
</div>

